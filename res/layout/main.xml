<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent" 
    android:orientation="vertical" 
    android:layout_gravity="top">
    <TextView 
    android:id="@+id/myLocationText" 
    android:layout_height="wrap_content" 
    android:text="@string/myLocationText" 
    android:layout_gravity="center" 
    android:layout_width="fill_parent">
    </TextView>
    <Button 
    android:id="@+id/saveLocationButton" 
    android:text="@string/savedLocationButton"
    android:layout_gravity="center" 
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent">
    </Button>
    <TextView 
    android:id="@+id/savedLocationText" 
    android:text="@string/savedLocationText" 
    android:layout_gravity="center" 
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent">
    </TextView>
    <Button 
    android:layout_gravity="center" 
    android:layout_height="wrap_content" 
    android:id="@+id/cancelAlertButton" 
    android:text="@string/cancelAlertButton" 
    android:layout_width="fill_parent">
    </Button>
    <Button 
    android:id="@+id/mapButton" 
    android:layout_height="wrap_content" 
    android:text="@string/mapButton" 
    android:layout_width="fill_parent">
    </Button> 
</LinearLayout>
